<h1>New Game</h1>

<div class="container">
<div class="row">
  <% @letters.each do |letter| %>

      <div class="col-1 col-md-1"><div class="card"><%= letter %></div></div>

  <% end %>

</div>
</div>

 <h3>What is the longest word you can find?</h3>

  <form class="form-inline" action="score" method="post">
    <%= hidden_field_tag 'collected_input', @letters, onchange: "alert('Input collected!')" %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" class="form-control" name="question">
    <input type="submit" class="btn btn-primary" value="Play!">

  </form>

